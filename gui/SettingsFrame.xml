<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<GUI>
    <!-- =========================================================
         FS25 Realistic Soil & Fertilizer - GUI Templates
         =========================================================
         UI element templates for settings injection
         ========================================================= -->

    <!-- Section Header Template -->
    <GuiElement type="text" name="sf_sectionHeader">
        <Properties
            textSize="0.022"
            textBold="true"
            textColor="0.95 0.95 0.95 1"
            textAlignment="left"
            textVerticalAlignment="center"
        />
    </GuiElement>

    <!-- Binary Option Row Template (Checkbox + Label) -->
    <GuiElement type="element" name="sf_binaryOption">
        <Properties
            height="0.03"
        />

        <!-- Checkbox element -->
        <GuiElement type="checkedOption" name="sf_checkbox">
            <Properties
                position="0 0"
                size="0.03 0.03"
            />
        </GuiElement>

        <!-- Label text -->
        <GuiElement type="text" name="sf_label">
            <Properties
                position="0.035 0"
                size="0.7 0.03"
                textSize="0.016"
                textColor="0.95 0.95 0.95 1"
                textAlignment="left"
                textVerticalAlignment="center"
            />
        </GuiElement>
    </GuiElement>

    <!-- Multi Option Row Template (Dropdown + Label) -->
    <GuiElement type="element" name="sf_multiOption">
        <Properties
            height="0.035"
        />

        <!-- Multi-text option (dropdown) -->
        <GuiElement type="multiTextOption" name="sf_dropdown">
            <Properties
                position="0 0"
                size="0.3 0.035"
                textSize="0.016"
                textColor="0.95 0.95 0.95 1"
            />
        </GuiElement>

        <!-- Label text -->
        <GuiElement type="text" name="sf_label">
            <Properties
                position="0.32 0"
                size="0.66 0.035"
                textSize="0.016"
                textColor="0.95 0.95 0.95 1"
                textAlignment="left"
                textVerticalAlignment="center"
            />
        </GuiElement>
    </GuiElement>

    <!-- Description/Info Text Template -->
    <GuiElement type="text" name="sf_description">
        <Properties
            textSize="0.014"
            textColor="0.7 0.7 0.7 1"
            textAlignment="left"
            textVerticalAlignment="top"
            wordWrap="true"
        />
    </GuiElement>

</GUI>
